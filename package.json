{
    "name": "blockchainapp",
    "version": "1.0.0",
    "description": "Blockchain app implemented in JavaScript",
    "main": "index.js",
    "engines": {
        "node": "14.16.0",
        "npm": "6.14.11"
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "nyc mocha --recursive",
        "start": "fabric-chaincode-node start",
        "build": "node buildScript.js"
    },
    "engineStrict": true,
    "author": "Hyperledger",
    "license": "Apache-2.0",
    "dependencies": {
        "body-parser": "^1.19.2",
        "express": "^4.17.3",
        "fabric-ca-client": "^2.2.11",
        "fabric-contract-api": "^2.0.0",
        "fabric-network": "^2.2.11",
        "fabric-shim": "^2.0.0"
    },
    "devDependencies": {
        "chai": "^4.1.2",
        "eslint": "^4.19.1",
        "mocha": "^5.2.0",
        "nyc": "^14.1.1",
        "sinon": "^6.0.0",
        "sinon-chai": "^3.2.0"
    },
    "nyc": {
        "exclude": [
            "coverage/**",
            "test/**"
        ],
        "reporter": [
            "text-summary",
            "html"
        ],
        "all": true,
        "check-coverage": true,
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
    }
}
